   "source": [
    "import cv2\n",
    "\n",
    "image = cv2.imread('input/1.png')\n",
    "image = cv2.cvtColor(image,cv2.COLOR_BGR2GRAY)\n",
    "\n",
    "alpha = 1\n",
    "beta = -100\n",
    "\n",
    "adjusted = cv2.convertScaleAbs(image, alpha=alpha, beta=beta)\n",
    "\n",
    "cv2.imshow('original', image)\n",
    "cv2.imshow('adjusted', adjusted)\n",
    "cv2.waitKey()"
   ]
  }
